<% provide(:title, 'News') %>
<%= stylesheet_link_tag 'common.css' %>
<%= stylesheet_link_tag 'articles.css' %>
<%= stylesheet_link_tag 'form.css' %>

<div class="p-header">
    <div id="news">
            <%= render 'layouts/header_p'%>
    </div>
</div><!--p-header-->
<div class="m-header-nav">
    <%= render 'layouts/header_m'%>
    <%= render 'layouts/header_nav_m'%>
</div>

<h2 class="page-title"><span>-</span> News <span>-</span></h2>

<p class="post-explain-text">ログイン時、このページでは記事の編集機能が利用できます。</p>
<p class="post-explain-text"><i class="fa fa-edit"></i>記事編集　<i class="fa fa-trash"></i>記事削除　<i class="fa fa-list-ul"></i>記事一覧へ</p>
<div class="news-contents wrapper">
    <div class="articles">
        <%= render 'articles/article_show'%>
    </div>

    <aside>
        <h3 class="sub-title">Recent Entry</h3>
        <div class="recent-entry">
                <%= render 'articles/recent_entry' %>
        </div>
        <h3 class="sub-title">Category</h3>
        <div class="category">
                <%= render 'articles/category' %>
        </div>
    </aside>
</div>

<% if logged_in? %>
<div id="edit-form">
<%= render 'articles/edit_form_js' %>
</div>
<div id="post-success-msg"></div>
<% end %>

<%= javascript_include_tag "common.js" %>
<%= javascript_include_tag "article.js" %>

<%= javascript_include_tag Ckeditor.cdn_url %>